/*

*/
#include <Servo.h>

Servo servo1;
Servo servo2;
Servo servo3;
Servo servo4;

void setup() {
  Serial.begin(9600);
  pinMode(7, OUTPUT);
  
  servo1.attach(9);
  servo2.attach(10);
  servo3.attach(11);
  servo4.attach(12);
  
  servo1.write(90);
  servo2.write(90);
  servo3.write(90);
  servo4.write(90);
  
}

void loop() {
 recieveData();
}

void recieveData(){
  while(Serial.available()){
    char S_Angle = Serial.read();
    
    int angle = S_Angle - '0';
    
    digitalWrite(7, HIGH);
    servo1.write(angle*20);
    servo3.write(180-(angle*20));
  }
  //servo1.write(90);
  //servo3.write(90);
  digitalWrite(7, LOW);
}

